<%if current_user%>
<h3>Submit a comment</h3>
<div id="new-comment-form">
  <form action="../dreams/<%=@current_dream.id %>" method="POST">
    <div id="comment-box">
      <textarea rows="4" cols="50" name="content"></textarea>
    </div>
    <div class="submit-button">
      <input  style="border:none; background:white" type="submit" value="Submit">
    </div>
  </form>
</div>
<%end%>