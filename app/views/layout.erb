  <script src="/js/application.js"></script> 


     <script src="/js/application.js"></script>
       <script src="/js/clock.js"></script>


  <title></title>
</head>
<body>
  <div id="content">
    <header><span><a href="/">Lucidity</a></span>
      <div id="login-toolbar">
        <% if current_user  %>
        <span>Hi <%= current_user.name %></span>
        <a href="/users/<%= current_user.id %>">My Dashboard</a>
        <a href="/logout">Logout</a>
        <% else %>
        <a href="/login">Login</a>
        <a href="/signup">Signup</a>
        <% end %>
      </div>

    </header>
    <%= yield %>
  </div>
</body>
</html>
